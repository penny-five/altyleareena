<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="colorAccent">@color/app_accent</item>
    </style>

    <style name="Widget.Altyleareena.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Altyleareena.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Altyleareena.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/toolbar_title</item>
    </style>

    <style name="Widget.Altyleareena.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/tablayout_tab_indicator</item>
        <item name="tabSelectedTextColor">@color/tablayout_tab_text_selected</item>
        <item name="tabTextAppearance">@style/TextAppearance.Altyleareena.Tab</item>
        <item name="android:background">@color/tablayout_background</item>
    </style>

    <style name="TextAppearance.Altyleareena.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/tablayout_tab_text</item>
    </style>

    <style name="TextAppearance.Altyleareena.Headline" parent="@style/None">
        <item name="android:textSize">@dimen/abc_text_size_headline_material</item>
    </style>

    <style name="TextAppearance.Altyleareena.Body_1" parent="@style/None">
        <item name="android:textSize">@dimen/abc_text_size_body_1_material</item>
    </style>

    <style name="TextAppearance.Altyleareena.Body_2" parent="@style/None">
        <item name="android:textSize">@dimen/abc_text_size_body_2_material</item>
    </style>

    <style name="TextAppearance.Altyleareena.Title" parent="@style/None">
        <item name="android:textSize">@dimen/abc_text_size_title_material</item>
    </style>

    <style name="TextAppearance.Altyleareena.Caption" parent="@style/None">
        <item name="android:textSize">@dimen/abc_text_size_caption_material</item>
    </style>

    <style name="TextAppearance.Altyleareena.List.Title" parent="@style/None">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="TextAppearance.Altyleareena.List.Subtitle" parent="@style/None">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="None"/>

</resources>
