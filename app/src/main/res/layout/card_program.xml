<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.pennyfive.altyleareena.ui.base.view.ForegroundLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:foreground="@drawable/selector_light">

        <com.github.pennyfive.altyleareena.ui.base.view.FixedAspectRatioImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:heightRatio="9"
            app:widthRatio="16"/>

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/series_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textAppearance="@style/TextAppearance.Altyleareena.Caption"
            android:textColor="@color/text_extra_light"
            app:typeface="roboto_light"
            tools:text="Series name"/>

        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/program_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textAppearance="@style/TextAppearance.Altyleareena.Body_1"
            android:textColor="@color/text_dark"
            tools:text="Program name"/>


        <com.devspark.robototextview.widget.RobotoTextView
            android:id="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:textAppearance="@style/TextAppearance.Altyleareena.Caption"
            app:fontFamily="roboto"
            app:textWeight="bold"
            tools:text="Category name"/>

    </com.github.pennyfive.altyleareena.ui.base.view.ForegroundLinearLayout>

</android.support.v7.widget.CardView>